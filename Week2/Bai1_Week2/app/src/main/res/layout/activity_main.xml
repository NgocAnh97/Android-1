<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="#FFFFFF"
        android:orientation="vertical">

    <ImageView
            android:id="@+id/image1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            android:src="@drawable/logoand"
    />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome to Android"
            android:textColor="#66BB6A"
            android:fontFamily="sans-serif-black"
            android:textStyle="bold"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/image1"
            android:layout_marginTop="20dp"
            android:id="@+id/Welcome"
    />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign in to continue "
            android:textColor="#757575"
            android:fontFamily="sans-serif"
            android:textSize="14dp"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/Welcome"
            android:id="@+id/SignIn1"
            android:layout_marginTop="10dp"
    />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="USERNAME "
            android:textColor="#757575"
            android:fontFamily="sans-serif"
            android:textSize="12dp"
            android:id="@+id/username"
            android:layout_below="@id/SignIn1"
            android:layout_alignLeft="@id/Edit1"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="42dp"
    />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PASSWORD"
            android:textColor="#757575"
            android:fontFamily="sans-serif"
            android:textSize="12dp"
            android:id="@+id/password"
            android:layout_below="@id/Edit1"
            android:layout_alignLeft="@id/Edit2"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="12dp"
    />

    <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Enter your Username"
            android:layout_below="@id/username"
            android:maxLines="3"
            android:textSize="16dp"
            android:textColor="#E0E0E0"
            android:textColorHighlight="#424242"
            android:layout_centerHorizontal="true"
            android:id="@+id/Edit1"
    />

    <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Enter your Passsword"
            android:layout_below="@id/password"
            android:maxLines="3"
            android:textSize="16dp"
            android:textColor="#E0E0E0"
            android:textColorHighlight="#424242"
            android:layout_centerHorizontal="true"
            android:id="@+id/Edit2"
    />

    <Button
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:text="SIGN IN"
            android:textColor="#F5F5F5"
            android:textSize="14dp"
            android:textStyle="bold"
            android:background="@drawable/button"
            android:layout_marginTop="25dp"
            android:layout_below="@id/Edit2"
            android:layout_centerHorizontal="true"
            android:id="@+id/SignIn2"
            style="?android:attr/borderlessButtonStyle"
    />

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SIGN UP FOR AN ACCOUNT? "
            android:textColor="#757575"
            android:fontFamily="sans-serif"
            android:textSize="12dp"
            android:background="#FFFFFF"
            android:layout_below="@id/SignIn2"
            android:layout_centerHorizontal="true"
            android:id="@+id/SignUp"
            style="?android:attr/borderlessButtonStyle"
    />
</RelativeLayout>
